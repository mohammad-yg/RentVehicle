@model RegisterUserViewModel

@{
    ViewBag.Title = "ثبت نام";
}


<div class="container pt-5">
    <div class="pr-3 pb-5">
        <h3 class="">ثبت نام</h3>
    </div>

    <form class="w-50 card card-body pt-5 pb-3" asp-action="Register" method="post">
        <div class="form-group form-row mb-20">
            <label class="col-4" asp-for="Name"></label>
            <input class="form-control col-8" asp-for="Name"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-info pr-4 pl-4 pt-2 pb-2" value="ثبت نام"/>
        </div>
    </form>
</div>